<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row g-0 mt-5 mb-5 height-100">
      <div class="col-md-6">
        <div class="bg-dark p-4 h-100 sidebar">
          <ul class="chart-design">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="bg-white p-4 h-100">
            <div class="p-3 d-flex justify-content-center flex-column align-items-center"> <span class="main-heading">Inscreva-se</span>
                <div class="form-data">
                  <%= f.label "Email" %><br />
                  <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100" %>
                </div>
                <%= f.fields_for :people_attributes do |people_fields| %>
                  <div class="form-data">
                    <%= f.label "Nome"%><br />
                    <%= people_fields.text_field :name, placeholder: "Nome", class: "form-control w-100" %>
                  </div>
                   <div class="form-data">
                    <%= f.label "Sobrenome"%><br />
                    <%= people_fields.text_field :last_name, placeholder: "Sobrenome", class: "form-control w-100" %>
                  </div>
                   <div class="form-data">
                    <%= f.label "Telefone"%><br />
                    <%= people_fields.text_field :telephone, placeholder: "Telefone", class: "form-control w-100" %>
                  </div>
                   <div class="form-data">
                    <%= f.label "Data de nascimento"%><br />
                    <%= people_fields.date_field :birth_date, placeholder: "Data de nascimento" %>
                  </div>
                  <div class="form-data">
                    <%= f.label "CPF/Cnpj" %><br />
                    <%= people_fields.text_field :cpf, id: "cpf_cnpj_field", placeholder: "CPF/Cnpj:" %>
                  </div>
                  <div class="form-data">
                    <%= f.label "EndereÃ§o" %><br />
                    <%= people_fields.text_field :address, placeholder: "EndereÃ§o:", class: "form-control w-100" %>
                  </div>
                <% end %>
                <div class="form-data">
                  <%= f.label "Senha" %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, class: "form-control w-100" %>
                </div>
                <div class="form-data">
                  <%= f.label "Confirme a senha"%>
                  <%= f.password_field :password_confirmation, class: "form-control w-100" %>
                </div>
                <div class="d-flex justify-content-between w-100 align-items-center">
                    <div class="form-check"> 
                      <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                      <label class="form-check-label" for="flexCheckDefault">
                          Remember me </label> </div> 
                      </div>
                      <div class="signin-btn w-100 mt-2" style="margin-botton: 10px;">
                        <%= f.submit "Cadastrar", class: "btn btn-outline-dark" %>
                      </div>
                      <% end %>
                      <p class="mt-3">Inscreva-se usando suas redes sociais</p>
                      <div>
                        <%= render "users/shared/links" %>
                      </div>
                    </ul>
                </div>
            </div>
        </div>
    </div>
  </div>
